<div class="select-states-demo">
  <label>
    Select an option
    <select>
      <option>Option 1</option>
      <option>Option 2</option>
      <option>Option 3</option>
    </select>
  </label>

  <label>
    <span>Select class="number"</span>
    <select class="number">
      <option>- 1</option>
      <option>0</option>
      <option>+ 2</option>
      <ption>+ 3</option>
    </select>
  </label>

  <button id="toggle-select-error">Toggle Error State</button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.querySelector('#toggle-select-error');
    const select = document.querySelector('.select-states-demo select');
    if (button && select) {
      button.addEventListener('click', () => {
        if (select.hasAttribute('data-error')) {
          select.removeAttribute('data-error');
        } else {
          select.setAttribute('data-error', 'true');
        }
      });
    }
  });
</script>
